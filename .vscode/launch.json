    "version": "0.2.0",
    "configurations": [
        {
            "name": "Module: lib.ffmpeg",
            "type": "python",
            "request": "launch",
            "module": "lib.ffmpeg",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Module: lib.trickplay",
            "type": "python",
            "request": "launch",
            "module": "lib.trick_play",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}